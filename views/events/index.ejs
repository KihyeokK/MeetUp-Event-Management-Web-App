<%- include('../includes/head.ejs') %>
<body>
    <%- include('../includes/navigation.ejs') %> 
    <main>
        <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
            <div class="col-md-5 p-lg-5 mx-auto my-5">
              <h1 class="display-4 fw-normal">Simple solution for event management.</h1>
              <p class="lead fw-normal">Find events to attend or host events in a few easy steps. MeetUp's target users range from friend groups to formal buisness event organizers.</p>
              <a class="btn btn-outline-primary" href="/admin/create-event">Create an event</a>
              <a class="btn btn-outline-primary" href="/events">Browse events</a>
            </div>
        </div>
        <div class="container mt-4 mb-5">
            <h1>Featured Events</h1>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                <% for (let event of events) { %>
                <div class="col">
                    <div class="card">
                        <img src="/images/undraw_buddies_i0fa.svg" class="card-img-top mt-4" alt="...">
                        <div class="card-body">
                            <h4 class="card-title"><%= event.title %></h4>
                            <h6 class="card-text text-muted"><%= event.eventStartDate %></h6>
                            <h6 class="card-text text-muted"><%= event.location %></h6>
                            <p class="card-text h-25 overflow-auto"><%= event.description %></p>
                            <a href="/events/<%= event._id %>" class="btn btn-primary">Details</a>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </main>
    <%- include('../includes/footer.ejs') %>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>