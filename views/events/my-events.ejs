<%- include('../includes/head.ejs') %>
<body>
    <%- include('../includes/navigation.ejs') %>
    <% if (unregisterSuccess) { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            You are successfully unregistered.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div> 
    <% } %>
    <div class="container mt-4">
        <h1>Created Events</h1>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% for (let event of createdEvents) { %>
            <div class="col">
                <div class="card">
                    <img src="/images/undraw_buddies_i0fa.svg" class="card-img-top mt-4" alt="...">
                    <div class="card-body">
                        <h4 class="card-title"><%= event.title %></h4>
                        <h6 class="card-text text-muted"><%= event.eventDate %></h6>
                        <h6 class="card-text text-muted"><%= event.location %></h6>
                        <p class="card-text"><%= event.description %></p>
                        <a href="/admin/edit-event/<%= event._id %>" class="btn btn-primary">Edit</a>
                        <form action="/admin/unregister-event" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <input type="hidden" value="<%= event._id%>" name="eventId">
                            <button type="submit" class="btn btn-danger">Delete Event</button>
                        </form>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
        <h1 class="mt-4">Registered Events</h1>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-4">
            <% for (let event of registeredEvents) { %>
            <div class="col">
                <div class="card">
                    <img src="/images/undraw_buddies_i0fa.svg" class="card-img-top mt-4" alt="...">
                    <div class="card-body">
                        <h4 class="card-title"><%= event.title %></h4>
                        <h6 class="card-text text-muted"><%= event.eventDate %></h6>
                        <h6 class="card-text text-muted"><%= event.location %></h6>
                        <p class="card-text"><%= event.description %></p>
                        <form action="/admin/unregister-event" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <input type="hidden" value="<%= event._id%>" name="eventId">
                            <button type="submit" class="btn btn-danger">Unregister</button>
                        </form>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
</body>
</html>